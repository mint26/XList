<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColor">@color/colorGrey</item>
        <item name="android:fontFamily">sans-serif-black</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="item_day_subfont" parent="@android:style/TextAppearance.Small">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/item_padding</item>
        <item name="android:paddingLeft">@dimen/item_padding</item>
        <item name="android:paddingRight">@dimen/item_padding</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="item_day_font" parent="@android:style/TextAppearance.Large">
        <item name="android:paddingBottom">@dimen/item_padding</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="item_title_font" parent="@android:style/TextAppearance.Medium">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="item_label_font" parent="@android:style/TextAppearance.Medium">
        <item name="android:textStyle">normal</item>
        <item name="android:color">@color/colorPrimaryDark</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="item_input_font" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/colorGrey</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="app_name" parent="@android:style/TextAppearance.Large">
        <item name="android:textColor">@color/colorGrey</item>
        <item name="android:fontFamily">sans-serif-black</item>
    </style>

    <style name="item_checkbox">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingRight">@dimen/item_small_padding</item>
    </style>
</resources>
